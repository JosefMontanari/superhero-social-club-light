@page
@model SuperHeroSocialClubLight.Pages.Superhero.DetailsModel
@{
}

@if (Model.Superhero != null)
{
	<h1>@Model.Superhero.Name</h1>
	<h1>@Model.Superhero.SecretIdentity</h1>
@foreach(var superpower in Model.Superhero.SuperPowers)
	{
		<h1>@superpower</h1>
	}

	<a asp-page="/Superhero/Edit" asp-route-id="@Model.Superhero.Id" >
	<input class="btn btn-danger" type="submit" value="Edit" />
	</a>


}
else
{
	<h1>???</h1>
}